<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".userInterface.SettingsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/lifeStoryOption"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/lifeStoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lifeStoryLines"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/lifeStoryTextExplanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lifeStoryText"
                android:text="@string/lifeStoryLinesExplanation"/>

            <Switch
                android:id="@+id/lifeStorySwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/lifeStoryDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/lifeStoryOption"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:id="@+id/familyTreeOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lifeStoryDivider"
            android:orientation="vertical">
            <TextView
                android:id="@+id/familyTreeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/familyTreeLines"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/familyTreeTextExplanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/familyTreeText"
                android:text="@string/familyTreeLinesExplanation"/>
            <Switch
                android:id="@+id/familyTreeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/familyTreeDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/familyTreeOption"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:id="@+id/spouseLineOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/familyTreeDivider"
            android:orientation="vertical">
            <TextView
                android:id="@+id/spouseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/spouseLines"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/spouseTextExplanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spouseText"
                android:text="@string/spouseLinesExplanation"/>
            <Switch
                android:id="@+id/spouseLineSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/spouseDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/spouseLineOption"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:id="@+id/fatherSideOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spouseDivider"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fatherSideText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fatherSide"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/fatherSideTextExplanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fatherSideText"
                android:text="@string/fatherSideExplanation"/>
            <Switch
                android:id="@+id/fatherSideSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/fatherSideDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/fatherSideOption"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:id="@+id/motherSideOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fatherSideDivider"
            android:orientation="vertical">
            <TextView
                android:id="@+id/motherSideText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/motherSide"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/motherSideTextExplanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/motherSideText"
                android:text="@string/motherSideExplanation"/>
            <Switch
                android:id="@+id/motherSideSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/motherSideDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/motherSideOption"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:id="@+id/maleEventsOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/motherSideDivider"
            android:orientation="vertical">
            <TextView
                android:id="@+id/maleEventsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maleEvents"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/maleEventsTextExplanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/maleEventsText"
                android:text="@string/genderEventsExplanation"/>
            <Switch
                android:id="@+id/maleEventsSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/maleEventsDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/maleEventsOption"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:id="@+id/femaleEventsOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maleEventsDivider"
            android:orientation="vertical">
            <TextView
                android:id="@+id/femaleEventsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/femaleEvents"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/femaleEventsTextExplanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/femaleEventsText"
                android:text="@string/genderEventsExplanation"/>
            <Switch
                android:id="@+id/femaleEventsSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/femaleEventsDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/femaleEventsOption"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:id="@+id/logoutOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/femaleEventsDivider"
            android:orientation="vertical">
            <TextView
                android:id="@+id/logoutText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/logoutTextExplanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logoutText"
                android:text="@string/genderEventsExplanation"/>
        </RelativeLayout>
        <View
            android:id="@+id/logoutDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/logoutOption"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>